<%- include ('partials/header.ejs') %>
        <div id="profileDisplay" class="container">
            <div class="container" id="container">
            <div class="row">
                <div class="col col-sm">
                    <div>
                        <img src="<%= user.profile_img %>" alt="Avatar" class="avatar">
                        <h1 class="key">Full name: <span class="input"><%= user.fullName %></span>
                        </h1>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm">
                    <h2 class="key">Age: <span class="input"><%= user.age %></span>
                    </h2>
                </div>
            </div>

            <div class="row">
                <div class="col-sm">
                    <h2 class="key">Gender: <span class="input"><%= user.gender %></span>
                    </h2>
                </div>
            </div>

            <div class="row">
                <div class="col-sm">
                    <h2 class="key">Weight: <span class="input"><%= user.weight %></span>
                    </h2>
                </div>
            </div>

            <div class="row">
                <div class="col-sm">
                    <h2 class="key">Height: <span class="input"><%= user.height %></span>
                    </h2>
                </div>
            </div>


            <div class="row">
                <div class="col-sm">
                    <h2 class="key">Max Calorie: <span class="input"><%= user.maxCal %></span>
                    </h2>
                </div>
            </div>

            <div class="row">
                <div class="col" id="edit">
                    <form action="/profileEdit">
                        <button>Edit Profile</button>
                    </form>
                </div>
            </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous">
        </script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <!-- Font Awesome -->
        <script src="https://kit.fontawesome.com/4dd305d0ad.js" crossorigin="anonymous"></script>
        </body>

        </html>
