<%- include ('partials/header.ejs') %>
    <div class="container d-flex justify-content-center">
        <div class="card" id="cardEdit">
            <form method="POST" action="/profileEdit?_method=PUT">
                <input type="hidden" name="userid" value="<%= user._id %>">
                <img src="<%= user.profile_img %>" alt="Avatar" class="avatar">
                <button><a href="/profileEditImage">Upload Image</a></button>
                <!-- <input type="file" name="image" value="<%#=user.profile_img%>"></input> -->
                <h2>Full name: <input type="text" name="fullName" placeholder="<%= user.fullName %>"></input></h2>
                <h2>Age: <input type="number" name="age" min="16" placeholder="<%= user.age %>"></input></h2>
                <h2>Gender:
                    <input type="radio" id="female" name="gender" value="female">
                    <label>Female</label>
                    <input type="radio" id="male" name="gender" value="male">
                    <label>Male</label></h2>
                <h2>Weight: <input type="number" name="weight" min="0" placeholder="<%= user.weight %>"></input></h2>
                <h2>Height: <input type="number" name="height" min="0" placeholder="<%= user.height %>"></input></h2>
                <h2>Max Calorie: <input type="number" name="maxCal" min="0" placeholder="<%= user.maxCal %>"></input></h2>
                <div>
                    <button type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous">
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/4dd305d0ad.js" crossorigin="anonymous"></script>
    </body>
</html>